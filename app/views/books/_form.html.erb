<%= form_with(model: book, local: true) do |form| %>
  
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>

  <div>
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <div>
    <%= form.label :publish_date %>
    <%= form.datetime_select :publish_date %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
